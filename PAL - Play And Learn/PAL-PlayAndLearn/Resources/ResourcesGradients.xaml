<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <RadialGradientBrush x:Key="LightBlueDarkBlue" GradientOrigin="0.5,0.5">
        <GradientStop Color="#0072bc" Offset="1.3"/>
        <GradientStop Color="#00b8e5" Offset="0"/>
    </RadialGradientBrush>
    <LinearGradientBrush x:Key="MenuGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#0094da" Offset="0"/>
        <GradientStop Color="#0078af" Offset="1"/>
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="StackPanelGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#0078af" Offset="0"/>
        <GradientStop Color="#00adff" Offset="1"/>
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="ButtonGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#0072bc" Offset="0"/>
        <GradientStop Color="#00b8e5" Offset="1"/>
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="BorderGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#0078af" Offset="1"/>
        <GradientStop Color="#e4e4e4" Offset="0"/>
    </LinearGradientBrush>
</ResourceDictionary>